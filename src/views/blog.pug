extends layout.pug

block content 
    h1= pageTitle
    if errors_message 
        // Afficher erreur si l'utilisateur n'est pas administrateur.
        createError(403)
    else 
        // Afficher le message si pr√©sent
        form(action='/submit-blog')
            label(for='title') Titre:
            input(type='text', id='title', name='title', required)
            if messageErrorTitle
                span(class='error')= messageErrorTitle

            label(for='img') Illustration:
            input(type='text', id='img', name='img')
            if messageErrorIllustration
                span(class='error')= messageErrorIllustration

            label(for='content') Contenu:
            input(type='textarea', id='content', name='content', required)
            if messageErrorContenu
                span(class='error')= messageErrorContenu

            button(type='submit') Submit